@model SuperMarket.Core.DTOs.EditProfileViewModel
@{
    ViewData["Title"] = "ویرایش حساب کاربری";
}

<div id="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="fa fa-home"></i></a></li>
            <li class="breadcrumb-item active" aria-current="page"> ویرایش حساب کاربری </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-7 col-xs-12">
                    <section class="user-account-content">
                        <h2 class="panel-left">ویرایش حساب کاربری</h2>
                        <form asp-action="EditProfile" method="post" class="form-horizontal" enctype="multipart/form-data">
                            @if (ViewBag.IsSuccess != null)
                            {
                                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                                <script>
                                    Swal.fire({
                                        position: 'top-end',
                                        icon: 'success',
                                        title: 'ویرایش حساب کاربری با موفقیت انجام شد',
                                        showConfirmButton: false,
                                        timer: 3000
                                    })
                                </script>
                            }
                            <fieldset id="account">
                                <h3>اطلاعات شخصی </h3>
                                <div class="form-group">
                                    <div class="col-sm-6">
                                        <label><i class="far fa-user"></i>نام و نام خانوادگی </label>
                                        <input type="text" class="form-control" asp-for="UserName" id="input-username" placeholder="نام و نام خانوادگی" name="username">
                                    </div>
                                    <div class="col-sm-6">
                                        <label><i class="far fa-phone-square"></i> شماره موبایل</label>
                                        <input type="text" class="form-control" asp-for="Mobile" id="input-mobile" placeholder="شماره موبایل" name="mobile" disabled>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <label><i class="far fa-envelope"></i> ایمیل</label>
                                        <input type="email" class="form-control" asp-for="Email" id="input-email" placeholder=" ایمیل" name="email">
                                    </div>
                                </div>
                            </fieldset>
                            <hr />
                            <fieldset id="address">
                                <legend>آدرس</legend>
                                <div class="form-group required">
                                    <div class="col-sm-12">
                                        <label><i class="far fa-map-marker-alt"></i> آدرس پستی</label>
                                        <input asp-for="Address" type="text" class="form-control" id="input-address" placeholder="آدرس پستی" name="address">
                                    </div>
                                </div>
                            </fieldset>
                            <div asp-validation-summary="All" class="text-danger">

                            </div>
                            <div class="buttons">
                                <div class="pull-right">
                                    <input type="submit" class="btn btn-success" value="ثبت تغییرات">
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>