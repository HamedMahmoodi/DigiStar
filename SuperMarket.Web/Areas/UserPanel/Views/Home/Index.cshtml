@model SuperMarket.Core.DTOs.InformationUserViewModel
@using SuperMarket.Core.Convertors
@{
    ViewData["Title"] = "پنل کاربری " + User.Identity.Name;
}

<div id="container">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><i class="fa fa-home"></i></a></li>
                <li class="breadcrumb-item active" aria-current="page"> پنل کاربری </li>
            </ul>
        </nav>

        <main>
            <div class="container">
                <div class="user-account">
                    <div class="row">
                        <partial name="_SideBar" />
                        <div class="col-md-9 col-sm-8 col-xs-12">
                            <section class="user-account-content">
                                <header><h2 class="panel-left"> اطلاعات حساب کاربری </h2></header>
                                <div class="inner">
                                    <div class="account-information">
                                        <ul class="panel-left">
                                            <li class="panel-left"> <i class="far fa-user"></i> نام و نام خانوادگی : @Model.UserName </li>
                                            <li class="panel-left"> <i class="far fa-phone-square-alt"></i> شماره موبایل: @Model.Mobile </li>
                                            <li class="panel-left"> <i class="far fa-envelope"></i> ایمیل :@Model.Email </li>
                                            <li class="panel-left"> <i class="far fa-calendar-check"></i> تاریخ عضویت : @Model.RegisterDate.ToShamsi() </li>
                                            <li class="panel-left"> <i class="far fa-money-bill-alt"></i> موجودی کیف پول : @Model.Wallet.ToString("#,0") تومان </li>
                                        </ul>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

