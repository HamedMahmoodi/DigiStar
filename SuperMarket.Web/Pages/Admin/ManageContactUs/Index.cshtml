@page
@using SuperMarket.Core.Convertors
@model SuperMarket.Web.Pages.Admin.ManageContactUs.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">لیست تماس با پشتیبانی</h2>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست تماس با پشتیبانی
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <form>
                                <div class="col-sm-5 col-md-5">
                                    <input type="email" name="filterEmail" class="form-control" placeholder="ایمیل" />
                                </div>
                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterMobile" class="form-control" placeholder="موبایل" />
                                </div>
                                <div class="col-sm-2 col-md-2">
                                    <button type="submit" class="btn btn-info">جست و جو</button>
                                    <a class="btn btn-default btn-sm" href="/Admin/ManageContactUs"> خالی کن</a>
                                </div>
                            </form>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام کاربری</th>
                                    <th>موبایل</th>
                                    <th>ایمیل</th>
                                    <th>تاریخ ثبت تماس</th>
                                    <th>موضوع</th>
                                    <th>توضیحات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usercontact in Model.ContactUsForAdminViewModel.ContactUses)
                                {
                                    <tr>
                                        <td>@usercontact.UserName</td>
                                        <td>@usercontact.Mobile</td>
                                        <td>@usercontact.Email</td>
                                        <td>@usercontact.CreateDate.ToShamsi()</td>
                                        <td>@usercontact.ContactTitle</td>
                                        <td>
                                            @usercontact.ContactDescription
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">

                                        @for (int i = 1; i <= Model.ContactUsForAdminViewModel.PageCount; i++)
                                        {
                                            <li class="paginate_button @((i==Model.ContactUsForAdminViewModel.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                <a href="/Admin/ManageContactUs?PageId=@i">@i</a>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
