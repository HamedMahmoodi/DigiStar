@page "{id}"
@model SuperMarket.Web.Pages.Admin.ManageGroups.DeleteGroupModel
@{
    ViewData["Title"] = "حذف گروه";
}

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            حذف گروه
        </div>
        <div class="panel-body">
            <form method="post">
                <input type="hidden" name="GroupId" value="@ViewData["GroupId"].ToString()" />
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>عنوان گروه</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Model.InformationProductGroupViewModel.GroupTitle
                            </td>

                        </tr>
                    </tbody>
                </table>
                <p>
                    آیا این گروه حذف شود؟
                    <input type="submit" value="حذف" class="btn btn-danger" />
                    <a href="/admin/ManageGroups" class="btn btn-default">خیر</a>
                </p>
            </form>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

