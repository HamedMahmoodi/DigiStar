@model IEnumerable<SuperMarket.DataLayer.Entites.Product.ProductGroup>

<div class="container">
    <nav id="menu" class="navbar">
        <div class="navbar-header"> <span class="visible-xs visible-sm"> منو <b></b></span></div>
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav">
                <li><a class="home_link" title="خانه" href="/"><span>خانه</span></a></li>
                <li class="mega-menu dropdown">
                    <a href="/Product">دسته ها</a>
                    <div class="dropdown-menu">
                        @foreach (var group in Model.Where(g => g.ParentId == null))
                        {
                            <div class="column col-lg-2 col-md-3">
                                <a href="/Product?selectedGroups=@group.GroupId">@group.GroupTitle</a>
                                @if (Model.Any(g => g.ParentId == group.GroupId))
                                {
                                    <div>
                                        <ul>
                                            @foreach (var sub in Model.Where(g => g.ParentId == group.GroupId))
                                            {
                                                <li><a href="/Product?selectedGroups=@sub.GroupId">@sub.GroupTitle</a></li>
                                            }
                                        </ul>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </li>

                <li class="contact-link"><a href="/AboutUs">درباره ما</a></li>
                <li class="contact-link"><a href="/ContactUs">تماس با ما</a></li>
                <li class="custom-link-right"><a href="/"> همین حالا بخرید!</a></li>
            </ul>
        </div>
    </nav>
</div>